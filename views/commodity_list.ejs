<html>
    <head>
        <title>
            DOW - Commodity List
        </title>
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
        <link rel="stylesheet" href="/css/home.css">
        <link rel="stylesheet" href="/css/font-awesome-4.7.0/css/font-awesome.min.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
        rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
        crossorigin="anonymous">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
        rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
        crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
        crossorigin="anonymous">
        </script>
    </head>
    
    <body>
        <nav class="navbar navbar-light bg-light fixed-top blue-nav">
            <a href="/list" class="go-back-arror">
                <i class="fa fa-chevron-left list-rating-star" style="color: rgb(255, 255, 255);margin-left:15px">
                </i>
            </a>
            <form class="form-inline search-form" style="margin-bottom: 0;">
                <input class="form-control nav-search-box" type="search" placeholder="Search"
                aria-label="Search">
            </form>
        </nav>
        <div class="container">
            <div class="store-info-container">
                <div class="detail-image" style="background-image: url(https://seeklogo.com/images/O/organic-restaurant-logo-D34AC3E788-seeklogo.com.png); "></div>
                <p class="detail-store-name"><%= (commodityListData.storeInfo)[0].store_name%></p>
                <p class="detail-store-sold">500 sold/month</p>
                <span class="badge bg-primary detail-store-tag">
                    <%= commodityListData.storeInfo[0].store_type%>
                </span>
            </div>
            <ul class="nav nav-pills mb-3 list-commodity-tab" id="pills-tab" role="tablist">
                <li class="nav-item" role="presentation">
                  <button class="nav-link active list-commodity-tab" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Order</button>
                </li>
                <li class="nav-item" role="presentation">
                  <button class="nav-link list-commodity-tab" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Comment</button>
                </li>
              </ul>
              <div class="tab-content" id="pills-tabContent">
                <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                    <% for (let i = 0; i < commodityListData.commodityList.length; i++) {%>
                    <li class=" store-list-item">
                            <div class="list-image" style="background-image: url(https://seeklogo.com/images/O/organic-restaurant-logo-D34AC3E788-seeklogo.com.png); ">
                            </div>
                            <div class="list-text">
                                <p class="list-store-name">
                                    <%= commodityListData.commodityList[i].comm_name %>
                                </p>
                                <p class="list-commodity-sold">
                                    142 sold/month
                                </p>
                                <span class="badge bg-primary list-commodity-discount">
                                    <%= commodityListData.commodityList[i].comm_discount %>%off
                                </span>
                                <p class="list-commodity-price">
                                    $<%= commodityListData.commodityList[i].comm_price * (100 - commodityListData.commodityList[i].comm_discount)/100 %><s class="list-commodity-old-price">$<%= commodityListData.commodityList[i].comm_price %></s>
                                </p>
                                <i class="fa fa-plus-circle list-commodity-add">
                                </i>
                            </div>
                        </li>
                    <% } %>
                </div>
                <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">...</div>
              </div>
        </div>
    </body>
    <style>
ul,li {
	list-style:none;
}

body,html {
	max-width:700px;
	margin:0 auto!important;
	position:relative;
	padding:0;
	overflow-x:hidden;
}
.store-list-item {
	background-color:#fff;
	margin:10px 0;
	padding:10px;
}
.list-image {
	width:100px;
	height:100px;
	background-color:#eee;
	background-size:auto
        100px;
	background-position-x:center;
	float:left;
	border-radius:8px;
}
.list-text {
    position: relative;
	margin-left:110px;
	height:100px;
}
.list-commodity-name {
	margin-bottom:1px;
	font-size:18px;
	font-weight:bold;
    color: #555;
}
.list-order-by {
	color:#777;
}
.list-order-by
        button {
	float:right;
	color:#777;
	background-color:transparent;
	border-color:transparent;
	-webkit-tap-highlight-color:rgba(0,0,0,0);
	-webkit-tap-highlight-color:transparent;
}
.list-order-by button:focus {
	color:#777;
	background-color:transparent;
	border-color:transparent;
	box-shadow:none;
}
.list-order-by
        button:hover {
	color:#777;
	background-color:transparent;
	border-color:transparent;
	box-shadow:none;
}
.dropdown-container {
	height:40px;
}
.slide-image {
	height:44px;
	width:44px;
	background:#777;
	border-radius:22px;
}
.slide-text {
	margin-top:2px;
	margin-bottom:2px;
	text-align:center;
	color:#000;
	font-size:12px;
}
.list-commodity-sold {
	font-size:12px;
	color:#777;
	margin-bottom:5px;
}
.list-commodity-discount {
    border: 1px solid coral;
    color: coral;
    background-color: transparent!important;
    padding: 3px 4px;
}
.list-container {
	overflow:auto;
}
.blue-nav {
	background-color:#0390ff!important;
	color:#fff;
}
.navbar-brand {
	color:#fff!important;
	margin-left:15px;
	font-weight:900;
}
.nav-search-box {
	border-radius:18px;
    width: 100%;
}
.container {
    padding-top: 56px;
}
.store-info-container {
	padding: 10px;
    margin-top: 15px;
    box-shadow: 0px 0px 9px #ddd;
    background-color: #fff;
    border-radius: 8px;
}
.detail-store-name {
    font-size: 26px;
    font-weight: 700;
    margin-bottom: 0;
}
.detail-store-sold {
    color: #999;
}
.detail-store-tag {
    background: #fff!important;
    color: rgb(230, 130, 16);
    border: 1px solid rgb(230, 130, 16);
}
.detail-image {
    width:50px;
	height:50px;
	background-color:#eee;
	background-size:auto
        50px;
	background-position-x:center;
	float:right;
	border-radius:8px;
}
.search-form {
    width: 100%;
    margin-left: 50px;
    margin-bottom: 0;
    padding-right: 10px;
}
a.go-back-arror {
    position: absolute;
}
.list-commodity-old-price {
    color: #999;
    font-size: 13px;
    margin-left: 6px;
}
.nav-link.list-commodity-tab {
    background-color: transparent;
    color: #666;
    border-radius: 0;
}
.nav-link.list-commodity-tab.active {
    background-color: transparent;
    color: #666;
    border-bottom: 2px solid #0390ff;
}
.nav-link.list-commodity-tab.active::after {
    width: 10px;
    height: 10px;
    background-color: #0390ff;
}
.nav-pills.list-commodity-tab {
    margin-bottom: 10px!important;
    margin-top: 10px!important;
}
.list-commodity-add {
    position: absolute;
    right: 5px;
    bottom: 5px;
    font-size: 24px;
    color: #0390ff;
}
    </style>

</html>