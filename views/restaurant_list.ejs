<html> 
    <head>
        <title>
            DOW - Restaurant List
        </title>
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"/>
        <link rel="stylesheet" href="css/home.css">
        <link rel="stylesheet" href="css/font-awesome-4.7.0/css/font-awesome.min.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
        rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
        crossorigin="anonymous" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
        rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
        crossorigin="anonymous" />
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
        crossorigin="anonymous">
        </script>
    </head>
    
    <body>
        <nav class="navbar navbar-light bg-light fixed-top blue-nav">
            <a class="navbar-brand">
                Restaurant
            </a>
            <form action='/list' method='GET' class="form-inline" style="margin-bottom: 0; margin-right: 10px;">
                <input name="search" value="<%= searchWord %>" class="form-control mr-sm-2 nav-search-box" type="search" placeholder="Search"
                aria-label="Search" />
            </form>
        </nav>
        <div class="container" style="padding-bottom: 70px;">
            <div class="select-container">
                <div class="slide-box">
                    <li class="slide-item">
                    </li>
                    <li class="slide-item">
                        <a href=<%= '/list' + (city == '' ? '' : ('?city=' + city))%>>
                            <div class="slide-image" style="background-image: url(https://foodhero.org/sites/foodhero-prod/files/styles/square_92x92/public/term-imgs/easy_Manicotti_DSC1867.jpg?itok=VpjVHEUv);
                            background-position: 30% 20%;">
                            </div>
                            <p class="slide-text">
                                All
                            </p>
                        </a>
                    </li>
                    <% for (let i = 0; i < storeTypeList.length; i++) {%>
                    <li class="slide-item">
                        <a href=<%= '/list?' + (city == '' ? '' : ('city=' + city + '&')) + 'type=' + storeTypeList[i] %>>
                            <div class="slide-image" style="background-image: url(https://foodhero.org/sites/foodhero-prod/files/styles/square_92x92/public/term-imgs/personal_pizza_2.jpg?itok=tE0d9flx);
                            background-position: 30% 20%;">
                            </div>
                            <p class="slide-text">
                                <%= storeTypeList[i] %>
                            </p>
                        </a>
                    </li>
                    <% } %>
                </div>
                <div class="dropdown-container">
                    <div class="dropdown list-order-by">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1"
                        data-bs-toggle="dropdown" aria-expanded="false">
                            Order by
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                            <li>
                                <a class="dropdown-item" href="#">
                                    Popular
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">
                                    Rating
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">
                                    Name
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="list-container">
                <% for (let i = 0; i < storeList.length; i++) { %>
                <li class=" store-list-item">
                    <a href=<%= "/store/"+  storeList[i].store_id %>>
                        <div class="list-image" style="background-image: url(https://seeklogo.com/images/O/organic-restaurant-logo-D34AC3E788-seeklogo.com.png); ">
                        </div>
                        <div class="list-text">
                            <p class="list-store-name">
                                <%= storeList[i].store_name %>
                            </p>
                            <p class="list-rating-star-container">
                                <i class="fa fa-star list-rating-star" style="color: rgb(253, 202, 60)">
                                </i>
                                <i class="fa fa-star list-rating-star" style="color: rgb(253, 202, 60)">
                                </i>
                                <i class="fa fa-star list-rating-star" style="color: rgb(253, 202, 60)">
                                </i>
                                <i class="fa fa-star list-rating-star" style="color: rgb(253, 202, 60)">
                                </i>
                                <i class="fa fa-star-o list-rating-star" style="color: rgb(253, 202, 60)">
                                </i>
                            </p>
                            <p class="list-store-sold">
                                142 sold/month
                            </p>
                            <span class="badge bg-primary list-store-tag">
                                <%= storeList[i].store_type %>
                            </span>
                        </div>
                    </li>
                </a>
                <% } %>
                <footer class="navbar navbar-light bg-light fixed-bottom" style="height: 56px; background-color: #0390ff!important; ">
                    <a href="/list">list</a>
                    <a href="/history">history</a>
                    <a href="/me">me</a>
                </footer>
            </div>
        </div>
        <style>
            a {
                text-decoration:none
            }
            a .list-store-name {
                color: #333;
            }
            ul,li {
              list-style: none;
            }

            .slide-box {
              padding: 0;
              display: -webkit-box;
              overflow-x: auto;
                        /*适应苹果*/
              -webkit-overflow-scrolling: touch;
              padding: 10px 0 0 0;
            }

            .slide-item {
              width: 44px;
              height: 65px;
              margin-right: 25px;
              background: transparent;
            }
                    /*隐藏掉滚动条*/
            .slide-box::-webkit-scrollbar {
              display: none;
            }

            .slide-item:last-child {
              border: none;
              background: transparent;
              width: 1px;
              height: 44px;
            }

            .slide-item:first-child {
              border: none;
              background: transparent;
              width: 1px;
              height: 44px;
              margin-right: 15px;
            }

            .select-container {
              background-color: #fff;
              position: fixed;
              top: 56px;
              right: 0;
              left: 0;
              z-index: 1030;
            }

            body, html {
              max-width: 700px;
              margin: 0 auto!important;
              position: relative;
              padding: 0;
              overflow-x: hidden;
            }

            .store-list-item {
              background-color: #fff;
              margin: 10px 0;
              padding: 10px;
            }

            .list-image {
              width: 100px;
              height: 100px;
              background-color: #eee;
              background-size: auto 100px;
              background-position-x: center;
              float: left;
              border-radius: 8px;
            }

            .list-text {
              margin-left: 110px;
              height: 100px;
            }

            .list-store-name {
              margin-bottom: 1px;
              font-size: 18px;
              font-weight: bold;
            }

            .list-rating-star {
              margin-right: -2px;
            }

            .list-order-by {
              color: #777;
            }

            .list-order-by button {
              float: right;
              color: #777;
              background-color: transparent;
              border-color: transparent;
              -webkit-tap-highlight-color: rgba(0,0,0,0);
              -webkit-tap-highlight-color: transparent;
            }

            .list-order-by button:focus {
              color: #777;
              background-color: transparent;
              border-color: transparent;
              box-shadow: none;
            }

            .list-order-by button:hover {
              color: #777;
              background-color: transparent;
              border-color: transparent;
              box-shadow: none;
            }

            .dropdown-container {
              height: 40px;
            }

            .slide-image {
              height: 44px;
              width: 44px;
              background: #777;
              border-radius: 22px;
            }

            .slide-text {
              margin-top: 2px;
              margin-bottom: 2px;
              text-align: center;
              color: #000;
              font-size: 12px;
            }

            .list-rating-star-container {
              margin-bottom: 5px;
            }

            .list-store-sold {
              font-size: 12px;
              color: #777;
              margin-bottom: 5px;
            }

            .list-container {
              overflow: auto;
            }

            .blue-nav {
              background-color: #0390ff!important;
              color: #fff;
            }

            .navbar-brand {
              color: #fff!important;
              margin-left: 15px;
              font-weight: 900;
            }

            .nav-search-box {
              border-radius: 18px;
            }

            .select-container {
            }

            .list-container {
              padding-top: 171px;
            }
    </style> 
 </body>
</html>